{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "japanese",
  "alwaysThinkingEnabled": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "LS",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "ToolSearch",
      "Bash(cd:*)",
      "Bash(docker:*)",
      "Bash(mkdir:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(which:*)",
      "mcp__firecrawl-mcp__*",
      "mcp__deepwiki__*",
      "mcp__context7__*",
      "mcp__brightdata__*"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\a' > $(tmux display-message -p -t \"$TMUX_PANE\" '#{pane_tty}')"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\a' > $(tmux display-message -p -t \"$TMUX_PANE\" '#{pane_tty}')"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  }
}
