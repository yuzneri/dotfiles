{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "japanese",
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "LS",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "ToolSearch",
      "Bash(cd:*)",
      "Bash(docker:*)",
      "Bash(mkdir:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(which:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  }
}
